vpath %.cpp ../src/thread
vpath %.cpp ../src/util
vpath %.cpp ../src/base
vpath %.h ../src/thread
vpath %.h ../src/base
vpath %.h ../src/util
vpath %.h ../src/include

INCLUDES = -I../src/include/ -I../src/util/ -I../src/thread/ -I../src/base

CC = g++
FLAGS = -lpthread

OBJS = test_thread.o monitor_thread.o \
thread.o thread_mgr.o \
log.o timer_thread.o mutex_lock.o mutex_guard.o utility.o

main:$(OBJS)
	$(CC) -o $@ $^ -Wall $(FLAGS)

$(OBJS):%.o:%.cpp
	$(CC) -g -c $< $(INCLUDES)	
	
.PHONY:clean
clean:
	-rm -f $(OBJS) main
